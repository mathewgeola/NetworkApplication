<?xml version="1.0" encoding="utf-8"?>
<network-security-config xmlns:tools="http://schemas.android.com/tools">

    <base-config
        cleartextTrafficPermitted="true"
        tools:ignore="InsecureBaseConfiguration" />


    <domain-config>
        <domain includeSubdomains="true">www.zhihu.com</domain>
        <pin-set
            expiration="2099-01-01"
            tools:ignore="MissingBackupPin">
            <pin digest="SHA-256">CY4rHJiR4pEs2Chxsw4oDuhcEA9v+RVuh9X/lEc2O1E=</pin>
        </pin-set>
    </domain-config>


    <domain-config>
        <domain includeSubdomains="true">www.sogou.com</domain>
        <trust-anchors>
            <certificates src="@raw/www_sogou_com" />
        </trust-anchors>
    </domain-config>

    <domain-config>
        <domain includeSubdomains="true">www.example.com</domain>
        <trust-anchors>
            <certificates src="@raw/www_example_com" />
        </trust-anchors>
    </domain-config>

</network-security-config>